<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/freshman_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.ShowPictureActivity">


    <ImageView
            android:id="@+id/iv_school_scenery_big"
            android:layout_centerVertical="true"
            android:background="#aec0ff"
            android:src="@drawable/aaaaaaaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText"/>




    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/freshman_school_scenery_download"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText"/>

    <TextView
            android:text="1/12"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginBottom="23dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"

            tools:ignore="HardcodedText"/>




</RelativeLayout>