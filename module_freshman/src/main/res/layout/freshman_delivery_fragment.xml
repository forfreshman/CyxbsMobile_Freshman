<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.DeliveryFragment">


    <com.google.android.material.tabs.TabLayout android:layout_width="match_parent"
                                                android:layout_height="30dp"
                                                android:id="@+id/tl_guide_delivery"
                                                app:tabSelectedTextColor="#000000"
                                                app:tabTextColor="#6d6f70"
                                                android:background="#f9fcff"/>

    <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:layout_below="@id/tl_guide_delivery"
                                         android:id="@+id/vp_guide_delivery"/>


</LinearLayout>