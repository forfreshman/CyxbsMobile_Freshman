<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.fragment.HostelFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_guide_hostel">

        <com.google.android.material.tabs.TabLayout android:layout_width="match_parent"
                                                    android:layout_height="30dp"
                                                    android:id="@+id/tl_guide_hostel"
                                                    app:tabSelectedTextColor="#000000"
                                                    app:tabTextColor="#6d6f70"
                                                    app:tabRippleColor="@android:color/transparent"
                                                    android:background="#f9fcff"/>

        <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_below="@id/tl_guide_hostel"
                                             android:id="@+id/vp_guide_hostel"/>
    </RelativeLayout>

</FrameLayout>