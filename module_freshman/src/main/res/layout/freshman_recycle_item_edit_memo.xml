<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/freshman_bus_line_bg"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <CheckBox
                android:id="@+id/cb_necessary_fold"
                android:layout_alignParentStart="true"
                android:background="@drawable/freshman_check_checkbox_edit_memo"
                android:layout_marginStart="15dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_necessary_thing"
                android:layout_toEndOf="@+id/cb_necessary_fold"
                android:layout_marginStart="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="录取通知书"
                tools:ignore="HardcodedText,SpUsage"/>

        <ImageView
                android:id="@+id/iv_necessary_fold"
                android:layout_width="0dp"
                android:layout_alignParentEnd="true"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                tools:ignore="ContentDescription"/>
    </RelativeLayout>



    <TextView
            android:id="@+id/tv_necessary_spefic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="15dp"
            tools:ignore="HardcodedText,SpUsage"
            android:textColor="#666666"
            android:text=""/>



</LinearLayout>







