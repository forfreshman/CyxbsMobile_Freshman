<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <CheckBox
            android:layout_alignParentStart="true"
            android:id="@+id/cb_fold"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    <LinearLayout
            android:id="@+id/ll_fold"
            android:background="#2222"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_msg_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="" tools:ignore="HardcodedText,SpUsage"/>


        <TextView
                android:id="@+id/tv_msg_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage"
                android:text=""
        />
    </LinearLayout>


    <ImageView
            android:id="@+id/iv_msg_flod"
            android:src="@drawable/freshman_flod_up"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            tools:ignore="ContentDescription"/>

</RelativeLayout>
