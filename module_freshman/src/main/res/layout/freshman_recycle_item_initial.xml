<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/freshman_initial_bg_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
                android:layout_marginStart="22dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_recycle_initial_goto"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_initial_first"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=""
                    android:textSize="@dimen/freshman_recycle_initial_tv_first_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/freshman_black"
                    tools:ignore="SpUsage"/>

            <TextView
                    android:id="@+id/tv_initial_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/freshman_recycle_initial_tv_second_text_size"
                    android:textColor="@color/freshman_gray"
                    android:text=""
                    tools:ignore="SpUsage"/>


        </LinearLayout>

        <ImageView
                android:id="@+id/iv_recycle_initial_goto"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/freshman_back_icon"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                tools:ignore="ContentDescription"/>

    </RelativeLayout>
