<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

    <data>
        <import type="com.mredrock.cyxbs.freshman.viewmodel.InitialPage"/>
        <variable name="initialItem" type="InitialPage"/>
    </data>


    <RelativeLayout
            android:background="@drawable/freshman_initial_bg_recycle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/freshman_recycle_initial_item_height"
            android:padding="20dp">


        <LinearLayout
                android:layout_toStartOf="@+id/im_recycle_initial_back"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_initial_first"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@{initialItem.mainTitle}"
                    android:textSize="@dimen/freshman_recycle_initial_tv_first_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/freshman_black"
                    tools:ignore="SpUsage"/>

            <TextView
                    android:id="@+id/tv_initial_second"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="@dimen/freshman_recycle_initial_tv_second_text_size"
                    android:textColor="@color/freshman_gray"
                    android:text="@{initialItem.subhead}"

                    tools:ignore="SpUsage"/>


        </LinearLayout>

        <ImageView
                android:id="@+id/im_recycle_initial_back"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/freshman_back_icon"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                tools:ignore="ContentDescription"/>


    </RelativeLayout>
</layout>
