<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/data_background"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_marginTop="15dp"
                  android:orientation="vertical"
                  android:background="@drawable/guide_item_background"
                  android:id="@+id/ll_guide_delivery">

        <com.youth.banner.Banner android:layout_width="309dp"
                                 android:layout_height="191dp"
                                 android:layout_marginTop="18dp"
                                 android:layout_gravity="center_horizontal"
                                 android:id="@+id/banner_zxy"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="#4a4b4c"
                  android:id="@+id/tv_guide_hostel_detail"
                  android:layout_marginLeft="18dp"
                  android:layout_marginRight="18dp"
                  android:layout_marginBottom="20dp"
                  android:layout_marginTop="15dp"/>

    </LinearLayout>
</LinearLayout>